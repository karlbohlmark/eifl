{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "eqeqeq": "warn",
    "no-control-regex": "off",
    "react-hooks/exhaustive-deps": "off"
  },
  "plugins": ["react", "typescript", "import"],
  "ignorePatterns": ["node_modules/**", "dist/**", "build/**", "ztv/**"]
}
